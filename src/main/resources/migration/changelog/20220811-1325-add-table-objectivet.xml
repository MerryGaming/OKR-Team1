<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="20220811-1325-add-table-objective" author="YaLynk" >
        <createTable tableName="objective">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_class_id_class"/>
            </column>
            <column name="name" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="deadline" type="varchar(256)">
                <constraints nullable="false"/>
            </column>
            <column name="progress" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>


</databaseChangeLog>